<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="0dp"
    card_view:cardCornerRadius="6dp"
    card_view:cardUseCompatPadding="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    card_view:cardElevation="4dp"
    card_view:cardBackgroundColor="@color/accent_dark">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:srcCompat="@drawable/login"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:id="@+id/imageViewTransaccion"
                android:layout_marginLeft="16dp"
                android:src="@drawable/conductor"
                android:paddingBottom="16dp" />

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageViewTransaccion"
                android:layout_toEndOf="@+id/imageViewTransaccion"
                android:id="@+id/textViewTransaccionNombre"
                android:layout_marginRight="16dp"
                android:gravity="center_vertical|center_horizontal"
                android:textSize="20sp"
                android:layout_marginTop="15dp"
                android:textColor="@color/white" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/imageViewTransaccion"
                android:layout_alignBottom="@+id/imageViewTransaccion"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/imageViewTransaccion"
                android:paddingLeft="16dp"
                android:layout_marginRight="16dp">

                <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/textViewTransaccionDinero"
                    android:layout_weight="1"
                    android:gravity="fill_vertical|center_horizontal"
                    android:textSize="20sp"
                    android:layout_marginBottom="15dp"
                    android:textColor="@color/cardview_light_background" />
            </LinearLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

