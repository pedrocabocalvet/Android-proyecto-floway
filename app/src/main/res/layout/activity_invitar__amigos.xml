<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="paisdeyann.floway.Threads.Invitar_Amigos"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:background="@color/primary_light"
    android:weightSum="1">


    <TextView
        android:text="@string/tv_invitaramigos_activity_invitaramigos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtinvita"
        android:layout_weight="0.08"
        android:textColor="@color/cast_expanded_controller_background_color"
        android:textStyle="normal|bold"
        android:textSize="16sp" />

    <EditText
        android:layout_width="355dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editxtcorreo"
        android:layout_weight="0.06"
        android:hint="Introduce el correo electrÃ³nico" />

    <Button
        android:layout_width="44dp"
        android:layout_height="34dp"
        android:id="@+id/btnenviar"
        android:background="@android:drawable/ic_dialog_email"
        android:layout_marginRight="1dp"
        android:gravity="end" />

</LinearLayout>
